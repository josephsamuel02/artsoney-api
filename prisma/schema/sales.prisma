model sales {
    id               String            @id @default(auto()) @map("_id") @db.ObjectId
    userId           String            @unique
    storeId          String?           @unique
    total_revenue    Int?
    wallet           Wallet?
    sales            Int
    artsony_score    Int?
    bank_information BankInformation[]
    createdAt        DateTime?         @default(now())
    updatedAt        DateTime?         @updatedAt
}

// Type for Wallet
type Wallet {
    available_alance Int?
    pending_alance   Int?
}

// Type for BankInformation
type BankInformation {
    bank_name      String?
    account_name   String?
    account_number String?
}

// Type for Rating
type Rating {
    artsony_core         Int?
    artRating            Int?
    customer_atisfaction Int?
    delivery_ating       Int?
    reviews              Reviews[]
}

// Type for Reviews
type Reviews {
    user_ame      String?
    userId        String
    profile_image String?
    rating        Int?
    review        String?
}
